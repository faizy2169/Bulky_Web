@model Category
@{
    ViewData["Title"] = "Create";
}
<div class="container">
   
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <div class="card shadow my-4">
            <div class="card-header p-0">
                <div class="bg-primary text-center py-3">
                    <h3 class="text-white">Create Category</h3>
                </div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="my-2">
                        <label asp-for="Name" class="mb-2"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="my-2">
                        <label asp-for="DisplayOrder" class="mb-2"></label>
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="row my-4">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

</div>
@* Client Side Validation by using jquery script*@

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
