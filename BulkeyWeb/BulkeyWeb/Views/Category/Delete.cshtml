@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row my-3">
        <h3>Delete Category</h3>
        <hr />
    </div>
    <div class="row">
        <form method="post">
            @* <div asp-validation-summary="ModelOnly"></div> *@
            <div class="my-2">
                <label asp-for="Name" class="mb-2"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="my-2">
                <label asp-for="DisplayOrder" class="mb-2"></label>
                <input asp-for="DisplayOrder" disabled class="form-control" />
            </div>
            <div class="row my-4">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <button type="button" class="btn btn-secondary form-control">Back To List</button>
                </div>
            </div>
        </form>
    </div>
</div>
<input asp-for="Id" hidden />

@* Client Side Validation by using jquery script*@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
