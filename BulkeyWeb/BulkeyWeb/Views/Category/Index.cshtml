@model List<Category>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row my-4">
        <div class="col-md-6">
            <h3>Category List</h3>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"> <i class="bi bi-plus-circle fw-bold"></i> Create New Category</a>
        </div>
    </div>
        <hr class="my-3" />
    <table class="table table-bordered table-striped">
        <thead>
        <th>Category Name</th>
        <th>Display Order</th>
        </thead>
        <tbody>
            @{
                foreach (var items in Model)
                {
                    <tr class="align-middle">
                        <td>@items.Name</td>
                        <td>@items.DisplayOrder</td>
                        <td class="d-flex column-gap-3">
                            <a class="btn btn-primary form-control" asp-controller="Category" asp-action="Edit" asp-route-id="@items.Id">Edit</a>
                            <a class="btn btn-danger form-control">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

